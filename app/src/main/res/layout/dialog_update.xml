<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/tv_update_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Update Record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_update_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#AEAEAE"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_update_record"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_update_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        app:layout_constraintBottom_toBottomOf="@id/tv_update_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toEndOf="@id/tv_update_name"
        app:layout_constraintTop_toTopOf="@id/tv_update_name" />

    <TextView
        android:id="@+id/tv_update_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#AEAEAE"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/et_update_email"
        app:layout_constraintBottom_toBottomOf="@id/et_update_email"
        app:layout_constraintStart_toStartOf="@id/tv_update_name"
        app:layout_constraintEnd_toEndOf="@id/tv_update_name" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_update_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Enter Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/et_update_name"
        app:layout_constraintTop_toBottomOf="@id/et_update_name" />
    
    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:textColor="#FF0000"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_update_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/et_update_email" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#AEAEAE"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/tv_update"
        app:layout_constraintTop_toTopOf="@id/tv_update"
        app:layout_constraintBottom_toBottomOf="@id/tv_update"
        app:layout_constraintEnd_toEndOf="@id/et_update_email" />

</androidx.constraintlayout.widget.ConstraintLayout>